<resources>

    <!-- Pager sliding tab strip -->
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="indicatorColor" format="color" />
        <attr name="underlineColor" format="color" />
        <attr name="dividerColor" format="color"/>
        <attr name="indicatorHeight" format="dimension" />
        <attr name="underlineHeight" format="dimension" />
        <attr name="tabPaddingLeftRight" format="dimension" />
        <attr name="dividerPaddingTabStrip" format="dimension" />
        <attr name="tabBackground" format="reference" />
    </declare-styleable>

    <declare-styleable name="PieGraph">
        <attr name="pieInnerCircleRatio" format="integer" />
        <attr name="pieSlicePadding" format="dimension" />
    </declare-styleable>

    <!--switch button -->
    <attr name="customSwitchStyle" format="reference" />
    <declare-styleable name="CustomSwitch">
        <attr name="textLeft" format="string" />
        <attr name="textRight" format="string" />
        <attr name="switchMaxWidth" format="dimension" />
        <attr name="colorUnChecked" format="color" />
        <attr name="colorChecked" format="color" />
        <attr name="backgroundDrawable" format="reference" />
        <attr name="switchDrawable" format="dimension" />
        <attr name="outerPadding" format="dimension" />
        <attr name="innerPadding" format="dimension" />
        <attr name="isChecked" format="boolean" />
    </declare-styleable>
</resources>