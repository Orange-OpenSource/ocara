    <color name="black10">#1A000000</color>
    <color name="black15">#26000000</color>
    <color name="black40">#66000000</color>
    <color name="black50">#80000000</color>
    <color name="black60">#98000000</color>
    <color name="black90">#E5000000</color>
    <color name="black">#000000</color>
    <color name="blue">#4E6CEF</color>
    <color name="red">#DD2C00</color>
    <color name="yellow">#FFD600</color>
    <color name="green">#259B24</color>
    <color name="orange">#EF6C00</color>
    <color name="orange_fallback">#FFA726</color>
    <color name="orange_light">#FFCC80</color>
    <color name="grey">#ffaaaaaa</color>
    <color name="grey_light">#ffcccccc</color>

