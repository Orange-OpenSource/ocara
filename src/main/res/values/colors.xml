<resources>

    <!-- Material design -->
    <color name="primary">#B0BEC5</color>
    <color name="primaryDark">#607D8B</color>
    <color name="primaryLight">#CFD8DC</color>
    <color name="accent">@color/orange</color>
    <color name="primaryText">@color/black90</color>
    <color name="secondaryText">@color/black60</color>

    <!-- Window -->
    <color name="windowBackground">#FAFAFA</color>
    <color name="gridBackground">#DDDDDD</color>
    <color name="divider">@color/black15</color>

    <!-- tab -->
    <color name="tabBackground">@color/primary</color>
    <color name="tabTextColorSelected">@color/primaryText</color>
    <color name="tabTextColorUnselected">@color/secondaryText</color>
    <color name="tabIndicatorColor">@color/accent</color>
    <color name="tabUnderlineColor">#E2E3EA</color>

    <!-- button -->
    <color name="buttonBackgroundDefault">@color/black15</color>
    <color name="buttonBackgroundPressed">@color/black40</color>
    <color name="buttonBackgroundFocused">@color/black40</color>
    <color name="buttonBackgroundDisabled">@color/black10</color>
    <color name="buttonTextColorPressed">@color/black40</color>
    <color name="buttonTextColorDisabled">@color/black40</color>
    <color name="buttonTextColorDefault">@color/black</color>

    <!-- CustomViewFlipper -->
    <color name="circle_enabled">#FF8800</color>
    <color name="circle_disabled">#CCCCCC</color>

    <!-- switch -->
    <color name="switchDefaultBackground">@color/black15</color>
    <color name="switchThumbBackground">@color/accent</color>

    <!-- result resume table colors -->
    <color name="resultTableHeader">@color/grey_light</color>
    <color name="resultTableColorOdd">@color/transparent</color>
    <color name="resultTableColorEven">@color/orange_light</color>


    <color name="text_color_default">#00000C</color>
    <color name="text_color_inverse">#FFFFFF</color>


    <!-- Color Palette from Orange Guildeline -->
    <color name="transparent">@android:color/transparent</color>
