<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/audit_object_definitions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_definition"
                style="@style/DetailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/detail_title_definition"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/text_definition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi tincidunt dolor nec urna elementum, ut scelerisque velit aliquam. Integer enim ipsum, scelerisque a metus quis, interdum ultrices neque. Quisque tellus felis, bibendum id tincidunt ut, laoreet id diam
"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/audit_object_illustrations_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_illustration"
                style="@style/DetailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Illustrations"
                android:textColor="@color/orange" />


            <LinearLayout
                android:id="@+id/illustration_comments_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_horizontal"
                android:showDividers="middle"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/audit_object_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_status_accessibility"
                style="@style/DetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/detail_title_status"
                android:textColor="@color/orange"
                android:layout_weight="1"/>

                <Button
                android:id="@+id/button_status_accessibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/title_status_accessibility"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_weight="2"
                android:icon="@drawable/ic_edit"
                android:text="@string/detail_button_try" />
            </RelativeLayout>


            <TextView
                android:id="@+id/text_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="non testé"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>


            <LinearLayout
                android:id="@+id/audit_object_characteristic_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_characteristic"
                        style="@style/DetailTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:text="@string/detail_title_caracteristic"
                        android:textColor="@color/orange" />

                    <Button
                        android:id="@+id/action_update_characteristic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/title_characteristic"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:icon="@drawable/ic_edit"
                        android:text="@string/detail_button_update" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/text_characteristic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Interphone //  Ouverture automatique // Dispositif de contrôle // Détection // Télécommande à distance // Commande
"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/audit_object_comments_layout"
            style="@style/ResultHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/comments_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_comment"
                        style="@style/DetailTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:text="@string/detail_title_comment" />

                    <Button
                        android:id="@+id/action_update_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/title_comment"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:icon="@drawable/ic_edit"
                        android:text="@string/detail_button_update" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/comments_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_horizontal"
                    android:showDividers="middle"
                    android:orientation="vertical">
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>