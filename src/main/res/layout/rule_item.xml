<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RuleItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/rule_button_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_info"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/rule_title"
        style="@style/RuleTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/ruleItemMargin"
        android:text="TextViewssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss" />

    <include
        layout="@layout/response_buttonbar"
        android:layout_height="@dimen/ruleItemButtonBarHeight"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/ruleItemMargin" />

</LinearLayout>