<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/audited_object_background"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/auditObjectItemPaddingBottom"
    android:paddingLeft="@dimen/auditObjectItemPaddingLeft"
    android:paddingRight="@dimen/auditObjectItemPaddingRight"
    android:paddingTop="@dimen/auditObjectItemPaddingTop">

    <include layout="@layout/audit_object_item_image" />

    <TextView
        android:id="@+id/audit_object_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/audit_object_image_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/audit_object_image_background"
        android:layout_below="@+id/audit_object_image_background"
        android:ellipsize="marquee"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>