<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:gravity="top|center_horizontal">

    <FrameLayout
        android:layout_width="@dimen/handicap_choice_background_size"
        android:layout_height="@dimen/handicap_choice_background_size"
        android:background="@drawable/handicap_choice_background"
        android:id="@+id/frameLayout">

        <ImageView
            android:id="@+id/handicap_type_icon"
            android:layout_width="@dimen/handicap_choice_item_size"
            android:layout_height="@dimen/handicap_choice_item_size"
            android:layout_gravity="center"
            android:adjustViewBounds="false"
            android:scaleType="centerInside"
            android:src="@drawable/ic_app" />

    </FrameLayout>

    <TextView
        android:id="@+id/handicap_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="tests sdf sdf sdffsdfsdfsdfsfsdf sdfsdf sd "
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/frameLayout"
        android:layout_alignRight="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout"
        android:gravity="center"/>

</RelativeLayout>

