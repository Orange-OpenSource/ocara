<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/QuestionItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title"
        style="@style/QuestionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView" />

    <include
        android:id="@+id/response_buttonbar"
        layout="@layout/response_buttonbar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/questionItemButtonBarHeight"
        android:layout_marginLeft="@dimen/defaultMarginLeft" />

</LinearLayout>

