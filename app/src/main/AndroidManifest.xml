<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.orange.ocara">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.orange.ocara.OcaraApplication_"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.orange.ocara.ui.activity.IntroActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.Launcher"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.orange.ocara.ui.activity.CreateAuditActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>

        <activity
            android:name="com.orange.ocara.ui.activity.UpdateAuditActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.activity.CreateSiteActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.orange.ocara.ui.activity.SetupAuditPathActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/setup_objects_title"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.activity.AuditObjectsActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label=""
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.activity.DetailsActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.orange.ocara.ui.activity.ShowEquipmentInfoActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.activity.ResultAuditActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.activity.ListAuditActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.activity.RulesetInfoActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.activity.BrowseIllustrationsActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.activity.BrowseExplanationsActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.activity.ListAuditCommentActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.activity.BrowseRulesetsActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.activity.ListAuditObjectCommentActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.activity.EditCommentTextActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.orange.ocara.ui.activity.EditCommentPhotoActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustResize" />


        <activity
            android:name="com.orange.ocara.ui.activity.EditCommentAudioActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.orange.ocara.ui.activity.EditCommentFileActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.orange.ocara.ui.activity.AboutActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/about_title"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.activity.SettingsActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/settings_title"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.fragment.TermsOfUseReadingActivity_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/terms_title"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.fragment.TermsOfUseAcceptanceFragment_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/terms_title"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.fragment.TutorialDisplayFragment_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/tutorial_title"
            android:launchMode="singleTop" />

        <activity
            android:name="com.orange.ocara.ui.fragment.HelpDisplayFragment_"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/tutorial_title"
            android:launchMode="singleTop" />

        <!-- The attribute "android:authorities" shall be unique, whatever the buildType is. -->
        <!-- That's why we use ${applicationId} to define it. -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/fileprovider" />

        </provider>

        <service
            android:name="com.orange.ocara.ui.intent.export.AuditExportService_"
            android:exported="false" />

        <!-- Database -->
        <meta-data
            android:name="AA_DB_NAME"
            android:value="ocara.db" />

        <meta-data
            android:name="AA_DB_VERSION"
            android:value="14" />

        <meta-data
            android:name="AA_MODELS"
            android:value="
              com.orange.ocara.data.cache.model.AuditEntity,
              com.orange.ocara.data.cache.model.AuditObjectEntity,
              com.orange.ocara.data.cache.model.QuestionAnswerEntity,
              com.orange.ocara.data.cache.model.RuleAnswerEntity,
              com.orange.ocara.data.cache.model.AuditorEntity,
              com.orange.ocara.data.cache.model.SiteEntity,
              com.orange.ocara.data.cache.model.CommentEntity,
              com.orange.ocara.data.net.model.RulesetEntity,
              com.orange.ocara.data.net.model.QuestionnaireEntity,
              com.orange.ocara.data.net.model.ChainEntity,
              com.orange.ocara.data.net.model.QuestionEntity,
              com.orange.ocara.data.net.model.EquipmentCategoryEntity,
              com.orange.ocara.data.net.model.IllustrationEntity,
              com.orange.ocara.data.net.model.EquipmentEntity,
              com.orange.ocara.data.net.model.RuleEntity,
              com.orange.ocara.data.net.model.SubjectEntity,
              com.orange.ocara.data.net.model.AuthorEntity,
              com.orange.ocara.data.net.model.RuleImpactEntity,
              com.orange.ocara.data.net.model.ImpactValueEntity,
              com.orange.ocara.data.net.model.ProfileTypeEntity,
              com.orange.ocara.data.net.model.RulesetCategoryEntity,
              com.orange.ocara.data.net.model.QuestionnaireGroupEntity" />

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="true" />

        <meta-data
            android:name="AA_SERIALIZERS"
            android:value="com.orange.ocara.tools.ListGsonSerializer" />

        <!-- Resolving bug on Oreo devices, Android documentation says:
                Android 8.0 (API level 26) changes how ContentResolver.notifyChange() and
                registerContentObserver(Uri, boolean, ContentObserver) behave for apps targeting
                Android 8.0.
                These APIs now require that a valid ContentProvider is defined for the authority
                in all Uris. Defining a valid ContentProvider with relevant permissions will
                help defend your app against content changes from malicious apps, and prevent
                you from leaking potentially private data to malicious apps.                     -->
        <provider
            android:name="com.activeandroid.content.ContentProvider"
            android:authorities="${applicationId}"
            android:enabled="true"
            android:exported="false">
        </provider>

    </application>

</manifest>
