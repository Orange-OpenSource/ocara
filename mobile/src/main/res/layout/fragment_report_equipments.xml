<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/equipmentDetailsCard"
            android:layout_width="@dimen/reportEquipmentDetailsCardWidth"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/reportEquipmentDetailsCardHeight"
            android:layout_marginTop="@dimen/reportEquipmentDetailsCardMarginTop"
            android:elevation="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/equipmentIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/circle" />

                <TextView
                    android:id="@+id/equipmentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/equipmentNameInCardTopMargin"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    tools:text="equipment name" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/designMarginMedium"
            android:layout_marginBottom="@dimen/designMarginShort"
            app:layout_constraintBottom_toTopOf="@+id/auditTV"
            app:layout_constraintTop_toBottomOf="@id/equipmentDetailsCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/commentsView"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="@dimen/commentsLabelInEquipmentDetailsStartMargin"
                    android:layout_marginTop="@dimen/commentsLabelInEquipmentDetailsTopMargin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/commentsCount"
                        style="@style/LabelsTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/showComments"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:singleLine="false"
                        tools:text="Commentaire(4)" />

                    <ImageView
                        android:id="@+id/showComments"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="11dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/commentsCount"
                        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_up_24" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/commentsListCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/commentsListInEquipmentDetailsHorizontalMargin"
                    android:layout_marginTop="@dimen/commentsListInEquipmentsDetailsTopMargin"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/commentsView"
                    app:strokeColor="#80979797"
                    app:strokeWidth="10dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/commentsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f4f4f4"
                        android:paddingHorizontal="@dimen/commentsListInEquipmentDetailsHorizontalMargin"
                        android:paddingVertical="@dimen/commentsListInEquipmentDetailsHorizontalMargin" />
                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/anomaliesView"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="@dimen/commentsLabelInEquipmentDetailsStartMargin"
                    android:layout_marginTop="@dimen/commentsLabelInEquipmentDetailsTopMargin"
                    app:layout_constraintStart_toStartOf="@+id/commentsView"
                    app:layout_constraintTop_toBottomOf="@+id/commentsListCard">

                    <TextView
                        android:id="@+id/anomaliesCount"
                        style="@style/LabelsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/report_eq_anomalies"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/showAnomalies"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="11dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/anomaliesCount"
                        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_up_24" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/anomaliesListCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/commentsListInEquipmentDetailsHorizontalMargin"
                    android:layout_marginTop="@dimen/commentsListInEquipmentsDetailsTopMargin"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/anomaliesView"
                    app:strokeColor="#80979797"
                    app:strokeWidth="10dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/anomaliesList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f4f4f4"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="@dimen/commentsListInEquipmentDetailsHorizontalMargin" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/auditTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auditButtonInEquipmentDetailsHeight"

            android:layout_marginHorizontal="@dimen/auditButtonInEquipmentDetailsHorizontalMargin"
            android:text="@string/adjust_eq"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>