<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <TextView
            android:id="@+id/rule_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/close" />


        <Button
            android:id="@+id/ok_button"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:drawableTop="@drawable/ok_answer"
            android:paddingTop="8dp"
            app:layout_constraintEnd_toStartOf="@id/doubt_button"
            app:layout_constraintTop_toBottomOf="@id/rule_label"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/doubt_button"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:drawableTop="@drawable/doubt_answer"
            android:paddingTop="8dp"
            app:layout_constraintTop_toTopOf="@id/ok_button"
            app:layout_constraintStart_toEndOf="@id/ok_button"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/nok_button"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:drawableTop="@drawable/no_answer"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/ok_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/no_answer_button"/>

        <Button
            android:id="@+id/no_answer_button"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:drawableTop="@drawable/na_answer"
            android:paddingTop="8dp"
            app:layout_constraintTop_toTopOf="@id/nok_button"
            app:layout_constraintStart_toEndOf="@id/nok_button"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/close_content_desc"
            android:padding="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_close_black_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>