<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/designMarginStart">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rule_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/title"
                    style="@style/DialogNormalTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/referential_info"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/close"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.542" />

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="@dimen/close_dialog_margin"
                    android:contentDescription="@string/content_desc_close"
                    android:padding="11dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icon_navigation_close_24_px" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/details_tv"
                style="@style/DialogHeadTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialogDataMarginStart"
                android:text="@string/authorLabel"
                android:textColor="@color/orange_design_accessibility"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/authorTV" />

            <TextView
                android:id="@+id/authorTV"
                style="@style/DialogNormalTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/designMarginMedium"
                android:layout_marginTop="@dimen/designMarginLong"
                android:gravity="start"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/details_tv"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <TextView
                android:id="@+id/name_tv"
                style="@style/DialogHeadTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialogDataMarginStart"
                android:text="@string/name"
                android:textColor="@color/orange_design_accessibility"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/name" />


            <TextView
                android:id="@+id/name"
                style="@style/DialogNormalTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/designMarginMedium"
                android:layout_marginTop="@dimen/designMarginLong"
                android:gravity="start"
                android:text="@string/name"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/name_tv"
                app:layout_constraintTop_toBottomOf="@+id/rule_dialog_title" />

            <TextView
                android:id="@+id/rule_cat_head"
                style="@style/DialogHeadTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialogDataMarginStart"
                android:text="@string/rule_category"
                android:textColor="@color/orange_design_accessibility"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ruleCategoryTV" />

            <TextView
                android:id="@+id/ruleCategoryTV"
                style="@style/DialogNormalTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/designMarginMedium"
                android:layout_marginTop="@dimen/designMarginLong"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/rule_cat_head"
                app:layout_constraintTop_toBottomOf="@+id/authorTV" />

            <TextView
                android:id="@+id/textView6"
                style="@style/DialogHeadTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialogDataMarginStart"
                android:text="@string/versionLabel"
                android:textColor="@color/orange_design_accessibility"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/versionTV" />

            <TextView
                android:id="@+id/versionTV"
                style="@style/DialogNormalTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/designMarginMedium"
                android:layout_marginTop="@dimen/designMarginLong"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/ruleCategoryTV" />

            <TextView
                android:id="@+id/textView8"
                style="@style/DialogHeadTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialogDataMarginStart"
                android:layout_marginTop="@dimen/designMarginLong"
                android:text="@string/commentLabel"
                android:textColor="@color/orange_design_accessibility"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/commentTV"
                style="@style/DialogNormalTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialogDataMarginStart"
                android:layout_marginTop="@dimen/designMarginShort"
                android:inputType="textMultiLine"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:singleLine="false"
                android:text="207

If the text you're putting in the TextView is short, it will not automatically expand to four lines. If you want the TextView to always have four lines regardless of the length of the text in it, set the android:lines attribute:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />


            <TextView
                android:id="@+id/textView9"
                style="@style/DialogHeadTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialogDataMarginStart"
                android:text="@string/dateLabel"
                android:textColor="@color/orange_design_accessibility"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/dateTV" />

            <TextView
                android:id="@+id/dateTV"
                style="@style/DialogNormalTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/designMarginMedium"
                android:layout_marginTop="@dimen/designMarginLong"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/commentTV" />


            <Button
                android:id="@+id/view_rules_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/ruleset_info_button"
                android:drawableTop="@drawable/ic_eye_24"
                android:padding="20dp"
                android:text="@string/view_referetial"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateTV" />

            <!--        <Button-->
            <!--            android:id="@+id/download_button"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_margin="16dp"-->
            <!--            android:layout_marginEnd="64dp"-->
            <!--            android:background="@drawable/ruleset_info_button"-->
            <!--            android:drawableTop="@drawable/ic_baseline_file_download_white_24"-->
            <!--            android:padding="20dp"-->
            <!--            android:text="@string/download"-->
            <!--            android:textColor="@color/white"-->
            <!--            android:textSize="12sp"-->
            <!--            android:visibility="visible"-->
            <!--            app:layout_constraintBottom_toBottomOf="parent"-->
            <!--            app:layout_constraintEnd_toEndOf="parent"-->
            <!--            app:layout_constraintTop_toBottomOf="@+id/commentTV"-->
            <!--            app:layout_constraintVertical_bias="0.488" />-->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/download_button"
                style="@style/DialogHeadTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="64dp"
                android:backgroundTint="@color/white"
                android:drawableTop="@drawable/modifier_download"
                android:minWidth="120dp"
                android:minHeight="75dp"
                android:paddingTop="5dp"
                android:text="@string/download"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:visibility="visible"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateTV"
                app:layout_constraintVertical_bias="0.488"
                app:strokeColor="@color/black"
                app:strokeWidth="3dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                style="@style/DialogHeadTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:minWidth="120dp"
                android:minHeight="75dp"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:visibility="visible"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateTV"
                app:layout_constraintVertical_bias="0.488"
                app:strokeColor="@color/black"
                app:strokeWidth="3dp" />


            <!--        <ImageView-->
            <!--            android:id="@+id/delete_icon"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginStart="16dp"-->
            <!--            app:layout_constraintBottom_toBottomOf="parent"-->
            <!--            app:layout_constraintStart_toStartOf="parent"-->
            <!--            app:layout_constraintTop_toBottomOf="@+id/commentTV"-->
            <!--            app:srcCompat="@drawable/ic_trash" />-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_icon"
                style="@style/DialogNormalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/designMarginMedium"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:drawableTop="@drawable/ic_trash"
                android:drawablePadding="@dimen/designMarginShort"
                android:gravity="center"
                android:minWidth="120dp"
                android:minHeight="75dp"
                android:text="@string/uninstall"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateTV"
                app:strokeColor="@color/black"
                app:strokeWidth="3dp" />
            <!--ic_baseline_delete_forever_24-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/view_rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/designPaddingMedium"
                android:backgroundTint="@color/white"
                android:drawableTop="@drawable/ic_baseline_eye_24"
                android:minWidth="120dp"
                android:minHeight="75dp"
                android:text="@string/view_referetial"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateTV"
                app:srcCompat="@drawable/ic_baseline_delete_forever_24"
                app:strokeColor="@color/black"
                app:strokeWidth="3dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>