                        app:layout_constraintTop_toTopOf="parent">


                        <TextView
                            android:id="@+id/about_item2_tv"
                            style="@style/SubTitleTextView_14"
                            android:layout_width="0dp"                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:singleLine="false"
                            android:gravity="start"
                            android:text="@string/about_item2_title_txt"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/about_item2_dropdown_icon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/about_item2_dropdown_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/commentsCardArrowEndMargin"
                            android:src="@drawable/ic_arrow_drop_down"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/about_item2_content"
                        style="@style/NormalTextView_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/grey_bg"
                        android:padding="@dimen/designMarginMedium"
                        android:visibility="gone"
                        android:text="@string/about_item2_content_txt"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/about_item2_layout" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/about_item3_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
